{
  "name": "underground",
  "private": true,
  "version": "1.0.0",
  "description": "A music finder app",
  "main": "server.js",
  "engines": {
    "node": ">=12.0.0 <15.0.0"
  },
  "scripts": {
    "postinstall": "cd client && npm install",
    "build": "cd client && npm run build",
    "test:watch": "cd client && npm run test:watch",
    "test": "npm run lint && npm run prettier && cd client && npm test",
    "lint": "eslint . --ext .js",
    "prettify": "prettier --write .",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "cd client && npm start",
    "prettier": "prettier --check \"**/*.{js,jsx,ts,tsx,md,mdx,html,css,json}\"",
    "server": "env-cmd nodemon server.js",
    "start": "node server.js"
  },
  "keywords": [],
  "author": "Nina Peters",
  "license": "MIT",
  "dependencies": {
    "@types/jest": "^26.0.16",
    "axios": "^0.21.0",
    "cookie-parser": "1.3.2",
    "cors": "^2.8.4",
    "env-cmd": "^10.1.0",
    "express": "^4.17.1",
    "querystring": "~0.2.0",
    "request": "~2.83.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "nodemon": "^2.0.6",
    "prettier": "2.2.0",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ninapeters/capstone-project.git"
  },
  "bugs": {
    "url": "https://github.com/ninapeters/capstone-project/issues"
  },
  "homepage": "https://github.com/ninapeters/capstone-project#readme"
}
